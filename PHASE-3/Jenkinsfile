pipeline {
    agent any
    tools {
        jdk "jdk3"
        maven "maven3"
        dockerTool "docker"
    }
    environment {
        SONAR_SCANNER_HOME = tool 'SonarScanner'
    }
    stages {
        stage('Git Checkout') {
            steps {
               git branch: 'main', credentialsId: 'git_id', url: 'https://github.com/Dhuuvviinn/BoardGame.git'
            }
        }
        
        stage("Compile"){
            steps{
                sh "mvn compile"
            }
        }
        
        stage('Test'){
            steps{
                sh "mvn test"
            }
        }
        
        stage('File system Scanner'){
            steps{
                sh "trivy fs --format table -o trivy_repost.hmtl ."
            }
        }
        
        stage("Sonar-Scanner"){
            steps{
                
                withSonarQubeEnv('sonar') {
                  sh '''${SONAR_SCANNER_HOME}/bin/sonar-scanner \
                          -Dsonar.projectKey=boardgame \
                          -Dsonar.projectName=boardgame \
                          -Dsonar.sources=.
                        '''
                    }
              }
        }
        
        stage('Quality Gate') {
                    steps {
                        script {
                            waitForQualityGate abortPipeline: false,credentialsId:"sonar_id"
                        }
                    }
                }
                
        stage("Nexus"){
            steps{
                withMaven(globalMavenSettingsConfig: 'maven-setting', jdk: 'jdk3', maven: 'maven3', traceability: true) {
                    sh "mvn deploy"
                }
            }
        }
        
        stage("Build and Tag Docker Image"){
            steps{
                withDockerRegistry(credentialsId: 'docker_id', url: 'https://index.docker.io/v1/') {
                    
                    sh "sudo docker build -t dhruvinpatel17/boardgame:latest ."
                }
            }
        }
        
        stage('Docker Image Scanner'){
            steps{
                sh "sudo trivy image --format table -o trivy-image-report.html dhruvinpatel17/boardgame:latest"
            }
        }
        
        stage("Push Docker Image"){
            steps{
                withDockerRegistry(credentialsId: 'docker_id', url: 'https://index.docker.io/v1/') {
                    sh "docker push dhruvinpatel17/boardgame:latest"
                }
            }
        }
        
        stage("Deploy to Kubernetes") {
  steps {
      withKubeConfig(credentialsId: 'kube_id',
                     namespace: 'webapps',
                     serverUrl: 'https://172.31.0.170:6443') 
                     {
        sh 'kubectl apply -f deployment-service.yaml --request-timeout=30s'
      }
    
  }
}

        stage('Deployment check to Kubernetes'){
            steps{
                withKubeConfig(credentialsId: 'kube_id',
                     namespace: 'webapps',
                     serverUrl: 'https://172.31.0.170:6443'){
                        sh ''' kubectl get pods -n webapps
                         kubectl get svc -n webapps '''
                     }
            }
        }

           




        
        
    }
    post {
              always {
                script {
                  def jobName = env.JOB_NAME
                  def buildNumber = env.BUILD_NUMBER
                  def buildUrl = env.BUILD_URL
            
                  // Jenkins sets result to null for SUCCESS
                  def pipelineStatus = (currentBuild.currentResult ?: 'SUCCESS').toUpperCase()
                  def bannerColor = (pipelineStatus == 'SUCCESS') ? 'green' : 'red'
            
                  def body = """
                    <html>
                      <body>
                        <div style="border: 4px solid ${bannerColor}; padding: 10px;">
                          <h2>${jobName} - Build ${buildNumber}</h2>
                          <div style="background-color: ${bannerColor}; padding: 10px;">
                            <h3 style="color: white; margin: 0;">Pipeline Status: ${pipelineStatus}</h3>
                          </div>
                          <p>Check the <a href="${buildUrl}">console output</a>.</p>
                        </div>
                      </body>
                    </html>
                  """
            
                  // Attach only if the report exists (prevents post step failure)
                  def attachPattern = fileExists('trivy-image-report.html') ? 'trivy-image-report.html' : ''
            
                  emailext(
                   subject: "${jobName} - Build ${buildNumber} - ${pipelineStatus.toUpperCase()}",
                            body: body,
                            to: 'dhruvin123.saurabhifosys@gmail.com',
                            from: 'jenkins@example.com',
                            replyTo: 'jenkins@example.com',
                            mimeType: 'text/html',
                            attachmentsPattern: 'trivy-image-report.html'
                  )
                }
              }
            }
}
